<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".PracticalTest02MainActivity">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/server"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_gravity="center">
    </TextView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

        <EditText
                android:id="@+id/server_port_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/port"
                android:layout_weight="2">
        </EditText>

        <Button
                android:id="@+id/server_connect_button"
                android:layout_gravity="end"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:text="@string/connect"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black" >
        </Button>
    </LinearLayout>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/client"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_gravity="center">
    </TextView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

        <EditText
                android:id="@+id/client_address_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/address"
                android:layout_weight="2">
        </EditText>
        <EditText
                android:id="@+id/client_port_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/port"
                android:layout_weight="2">
        </EditText>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

        <EditText
                android:id="@+id/client_word_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/word"
                android:layout_weight="1">
        </EditText>
        <Button
                android:id="@+id/search_definition_button"
                android:layout_gravity="end"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_margin="10dp"
                android:text="@string/search_definition"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black" >
        </Button>
    </LinearLayout>

    <TextView
            android:id="@+id/client_info_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    </TextView>


</LinearLayout>